<div class="page-title">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>{{name_page}}</h3>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class="breadcrumb-header float-end">
                <ol class="breadcrumb">
                {{# has_breadcrumb }}
                    <li class="breadcrumb-item"><a href="index.html">{{ breadcrumb.page }}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ breadcrumb.subpage }}</li>
                {{/ has_breadcrumb }}
                </ol>
            </nav>
        </div>
    </div>
</div>